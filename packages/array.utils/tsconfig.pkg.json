{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "outDir": "./dist/",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "dom",
            "DOM.Iterable",
            "es6",
            "es5",
            "es2019"
        ]
    },
    "files": [
        "src/index.ts",
        "src/defined/defined.ts",
        "src/defined/polyfill.ts",
        "src/onEmpty/index.ts",
        "src/flatMap/index.ts"
    ]
}