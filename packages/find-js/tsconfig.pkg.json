{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "lib": [
            "dom",
            "DOM.Iterable",
            "es6",
            "es5",
            "es2019"
        ],
        "module": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "./dist/",
        "sourceMap": true,
        "target": "ESNext",
    },
    "include": [
        "src/*.ts",
    ]
}